{
  "name": "ngweb",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "docker:build": "docker buildx build --pull --load -t registry.gkny.fr/ephiscience/web .",
    "docker:push": "docker push registry.gkny.fr/ephiscience/web:latest",
    "docker:all": "yarn docker:build && yarn docker:push",
    "docker:run": "docker run --rm -p 0.0.0.0:4000:4000 -it registry.gkny.fr/ephiscience/web",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format:fix": "prettier --write .",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/{app,environments,assets}/**/*{.ts,.js,.json,.css,.scss}\"",
    "dev:ssr": "ng run ngweb:serve-ssr",
    "serve:ssr": "node dist/ngweb/server/main.js",
    "build:ssr": "ng build && ng run ngweb:server",
    "prerender": "ng run ngweb:prerender"
  },
  "license": "CC-BY-NC-SA",
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.5",
    "@angular/common": "^17.0.5",
    "@angular/compiler": "^17.0.5",
    "@angular/core": "^17.0.5",
    "@angular/forms": "^17.0.5",
    "@angular/platform-browser": "^17.0.5",
    "@angular/platform-browser-dynamic": "^17.0.5",
    "@angular/platform-server": "^17.0.5",
    "@angular/router": "^17.0.5",
    "@angular/service-worker": "^17.0.5",
    "@angular/ssr": "^17.0.5",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "bootstrap": "^4.2.1",
    "core-js": "^3.6",
    "express": "^4.18.2",
    "fromentries": "^1.1.0",
    "js-yaml": "^4.0",
    "lodash": "^4.17.0",
    "rxjs": "~6.6.6",
    "tslib": "^2.0.0",
    "typeface-arvo": "^1.0",
    "typeface-cabin": "^1.1",
    "typeface-cabin-condensed": "^1.1",
    "typeface-roboto": "^1.1",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.5",
    "@angular-eslint/builder": "^17.1.1",
    "@angular-eslint/eslint-plugin": "^17.1.1",
    "@angular-eslint/eslint-plugin-template": "^17.1.1",
    "@angular-eslint/schematics": "17.1.1",
    "@angular-eslint/template-parser": "^17.1.1",
    "@angular/cli": "^17.0.5",
    "@angular/compiler-cli": "^17.0.5",
    "@angular/language-service": "^17.0.5",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^18.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^4.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-eslint": "^16.1.2",
    "protractor": "~7.0.0",
    "ts-node": "^8.0.0",
    "typescript": "5.2.2"
  },
  "prettier": {
    "printWidth": 140,
    "bracketSpacing": true,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "semi": true,
    "singleQuote": true
  }
}
