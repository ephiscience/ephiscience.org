{
  "name": "ngweb",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "docker:build": "docker build --pull -t registry.gkny.fr/ephiscience/web .",
    "docker:push": "docker build --pull -t registry.gkny.fr/ephiscience/web . && docker push registry.gkny.fr/ephiscience/web:latest",
    "docker:run": "docker run --rm -p 0.0.0.0:2015:2015 -it registry.gkny.fr/ephiscience/web",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format:fix": "pretty-quick --staged",
    "format:check": "prettier --config ./.prettierrc --list-different \"src/{app,environments,assets}/**/*{.ts,.js,.json,.css,.scss}\""
  },
  "license": "CC-BY-NC-SA",
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.16",
    "@angular/common": "~12.2.16",
    "@angular/compiler": "~12.2.16",
    "@angular/core": "~12.2.16",
    "@angular/forms": "~12.2.16",
    "@angular/platform-browser": "~12.2.16",
    "@angular/platform-browser-dynamic": "~12.2.16",
    "@angular/router": "~12.2.16",
    "@angular/service-worker": "~12.2.16",
    "@ngx-translate/core": "^12.0",
    "@ngx-translate/http-loader": "^4.0.0",
    "bootstrap": "^4.2.1",
    "core-js": "^3.6",
    "fromentries": "^1.1.0",
    "js-yaml": "^4.0",
    "lodash": "^4.17.0",
    "rxjs": "~6.6.6",
    "tslib": "^2.0.0",
    "typeface-arvo": "^1.0",
    "typeface-cabin": "^0.0.72",
    "typeface-cabin-condensed": "^0.0.72",
    "typeface-roboto": "^0.0.75",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.18",
    "@angular-eslint/builder": "^2.0.0",
    "@angular-eslint/eslint-plugin": "^2.0.0",
    "@angular-eslint/eslint-plugin-template": "^2.0.0",
    "@angular-eslint/schematics": "2.0.2",
    "@angular-eslint/template-parser": "^2.0.0",
    "@angular/cli": "~12.2.18",
    "@angular/compiler-cli": "~12.2.16",
    "@angular/language-service": "~12.2.16",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/js-yaml": "^4.0.1",
    "@types/node": "^13.0",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.6",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "husky": "^4.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "pretty-quick": "^2.0",
    "protractor": "~7.0.0",
    "ts-node": "^8.0.0",
    "typescript": "4.3.5"
  },
  "prettier": {
    "printWidth": 140,
    "bracketSpacing": true,
    "tabWidth": 2,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "semi": false,
    "singleQuote": true
  }
}
